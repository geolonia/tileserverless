{
  "name": "tileserverless",
  "description": "A Serverless Tile Server Kit.",
  "version": "2.5.0",
  "main": "serverless.yml",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "deploy:dev": "yarn build && sls deploy --stage=dev",
    "deploy:v1": "yarn build && sls deploy --stage=v1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.0.0",
    "aws-sdk": "^2.701.0",
    "jest": "^27.0.0",
    "serverless": "^2.14.0",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "aws-sdk": "^2"
  },
  "dependencies": {
    "@mapbox/mbtiles": "^0.12.1"
  }
}
