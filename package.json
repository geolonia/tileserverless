{
  "name": "tileserverless",
  "description": "A Serverless Tile Server Kit.",
  "version": "1.0.2",
  "main": "serverless.yml",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "deploy:dev": "npm run build && sls deploy --stage=dev",
    "remove:dev": "sls remove --stage=dev",
    "deploy:v1": "npm run build && sls deploy --stage=v1",
    "remove:v1": "sls remove --stage=v1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.16",
    "aws-sdk": "^2.701.0",
    "jest": "^26.6.3",
    "serverless": "^2.14.0",
    "serverless-api-gateway-caching": "^1.6.0",
    "serverless-content-encoding": "^1.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "aws-sdk": "^2"
  },
  "dependencies": {
    "@mapbox/mbtiles": "^0.12.1"
  }
}
