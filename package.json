{
  "name": "tileserverless",
  "description": "A Serverless Tile Server Kit.",
  "version": "1.0.2",
  "main": "serverless.yml",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "deploy:dev": "npm run build && sls deploy --stage=dev",
    "remove:dev": "sls remove --stage=dev",
    "deploy:v1": "npm run build && sls deploy --stage=v1",
    "remove:v1": "sls remove --stage=v1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.57",
    "@types/jest": "^26.0.3",
    "aws-sdk": "^2.701.0",
    "jest": "^26.1.0",
    "serverless": "^1.75.1",
    "serverless-content-encoding": "^1.1.0",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "aws-sdk": "^2"
  },
  "dependencies": {
    "@mapbox/mbtiles": "^0.12.1",
    "serverless-api-gateway-caching": "^1.4.1"
  }
}
